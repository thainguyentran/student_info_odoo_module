<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="subject_form_view" model="ir.ui.view">
            <field name="name">subject.form.view</field>
            <field name="model">ev.subject</field>
            <field name="arch" type="xml">
                <form>
                    <group string="Subject">
                        <group>
                            <field name="name" />
                        </group>
                        <group>
                            <field name="subject_marks" />
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="subject_tree_view" model="ir.ui.view">
            <field name="name">subject.tree.view</field>
            <field name="model">ev.subject</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="subject_marks"/>
                </tree>
            </field>
        </record>

        <record id="ev_subject_action" model="ir.actions.act_window">
            <field name="name">Subject</field>
            <field name="res_model">ev.subject</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>