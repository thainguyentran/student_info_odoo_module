<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="teacher_form_view" model="ir.ui.view">
            <field name="name">teacher.form.view</field>
            <field name="model">ev.teacher</field>
            <field name="arch" type="xml">
                <form>
                    <group string="Teacher">
                        <group>
                            <field name="name" />
                        </group>
                        <group>
                            <field name="email" />
                        </group>
                        <group>
                            <field name="phone_number" />
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="teacher_tree_view" model="ir.ui.view">
            <field name="name">teacher.tree.view</field>
            <field name="model">ev.teacher</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="ev_teacher_action" model="ir.actions.act_window">
            <field name="name">Teacher</field>
            <field name="res_model">ev.teacher</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>