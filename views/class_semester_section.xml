<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="class_form_view" model="ir.ui.view">
            <field name="name">class.form.view</field>
            <field name="model">ev.class</field>
            <field name="arch" type="xml">
                <form>
                    <group string="Class">
                        <group>
                            <field name="name" />
                        </group>
                    </group>
                </form>
            </field>
        </record>

